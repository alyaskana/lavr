<%= form_with(url: admin_story_path, model: story, local: true) do |form| %>
<% if story.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(story.errors.count, "error") %> prohibited this story from being saved:</h2>

  <ul>
    <% story.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :name, 'Имя' %>
  <%= form.text_field :name %>
</div>

<div class="field">
  <%= form.label :city, 'Город' %>
  <%= form.text_field :city %>
</div>

<div class="field">
  <%= form.label :age, 'Возраст' %>
  <%= form.number_field :age %>
</div>

<div class="field">
  <%= form.label :content, 'История' %>
  <%= form.text_area :content %>
</div>

<div class="field">
  <%= form.label :allow_public_read, 'Можно прочитать на ивенте:' %>
  <%= form.check_box :allow_public_read %>
</div>

<div class="field">
  <%= form.label :is_published, 'Опубликовано' %>
  <%= form.check_box :is_published %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>