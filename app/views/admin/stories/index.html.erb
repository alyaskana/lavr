<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Age</th>
      <th>Content</th>
      <th>Allow public read</th>
      <th>Published?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
    <tr>
      <td><%= story.name %></td>
      <td><%= story.city %></td>
      <td><%= story.age %></td>
      <td><%= story.content %></td>
      <td><%= story.allow_public_read %></td>
      <td><%= story.is_published %></td>
      <td><%= link_to 'Show', admin_story_path(story) %></td>
      <td><%= link_to 'Edit', edit_admin_story_path(story) %></td>
      <td><%= link_to 'Destroy', admin_story_path(story), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>